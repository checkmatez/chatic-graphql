{
  "name": "demo-graphql-server-1",
  "version": "1.0.0",
  "main": "src/server.ts",
  "license": "MIT",
  "scripts": {
    "start": "nodemon --ext ts,graphql --exec \"ts-node -r dotenv/config src/server.ts\"",
    "build": "rimraf dist && tsc",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --config .prettierrc --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "knex": "dotenv knex",
    "gen": "node -r dotenv/config ./node_modules/@graphql-codegen/cli/dist/commonjs/cli.js"
  },
  "dependencies": {
    "apollo-server": "^2.9.6",
    "bcryptjs": "^2.4.3",
    "envalid": "^5.0.0",
    "graphql": "^14.5.8",
    "graphql-middleware": "^4.0.1",
    "graphql-postgres-subscriptions": "^1.0.5",
    "graphql-shield": "^6.1.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.19.5",
    "lodash": "^4.17.15",
    "objection": "^1.6.11",
    "objection-db-errors": "^1.1.1",
    "pg": "^7.12.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.8.1",
    "@graphql-codegen/typescript": "^1.8.1",
    "@graphql-codegen/typescript-resolvers": "^1.8.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/lodash": "^4.14.144",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "^2.4.0",
    "@typescript-eslint/parser": "^2.4.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "nodemon": "^1.19.4",
    "prettier": "^1.18.2",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --config .prettierrc --write",
      "git add"
    ]
  }
}
